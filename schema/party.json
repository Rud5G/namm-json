{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://standards.namm.org/schema/2020.1/party.json",
    "type": "object",
    "title": "Party",
    "description": "This is a json-schema version of NAMM Party XSD",
    "additionalProperties": false,
    "properties": {
        "Version": {
            "$ref": "https://standards.namm.org/schema/2020.1/common.json#/definitions/Version"
        },
        "RevisionDate": {
            "type": "string",
            "format": "date-time"
        },
        "TradingPartner": {
            "type": "object",
            "additionalProperties": {
                "not": {}
            },
            "properties": {
                "PartyId": {
                    "type": "string",
                    "maxLength": 25
                },
                "PartyIdType": {
                    "type": "string",
                    "enum": [
                        "GLN",
                        "NAMM"
                    ]
                },
                "Name": {
                    "type": "string",
                    "maxLength": 35
                },
                "DBA": {
                    "type": "string",
                    "maxLength": 35
                },
                "URL": {
                    "type": "string",
                    "maxLength": 500,
                    "format": "uri"
                },
                "Locations": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "type": "object",
                        "additionalProperties": {
                            "not": {}
                        },
                        "properties": {
                            "PartyId": {
                                "type": "string",
                                "maxLength": 25
                            },
                            "PartyIdType": {
                                "type": "string",
                                "enum": [
                                    "GLN",
                                    "NAMM"
                                ]
                            },
                            "Description": {
                                "type": "string"
                            },
                            "Name": {
                                "type": "string",
                                "maxLength": 35
                            },
                            "DBA": {
                                "type": "string",
                                "maxLength": 35
                            },
                            "Address": {
                                "$ref": "https://standards.namm.org/schema/2020.1/common.json#/definitions/Address"
                            },
                            "Phone": {
                                "type": "string",
                                "maxLength": 24
                            },
                            "Fax": {
                                "type": "string",
                                "maxLength": 24
                            },
                            "Email": {
                                "type": "string",
                                "maxLength": 100,
                                "format": "email"
                            },
                            "StartDate": {
                                "type": "string",
                                "format": "date"
                            },
                            "EndDate": {
                                "type": "string",
                                "format": "date"
                            }
                        },
                        "required": [
                            "PartyId",
                            "PartyIdType"
                        ]
                    }
                }
            },
            "required": [
                "PartyId",
                "PartyIdType",
                "Name"
            ]
        }
    },
    "required": []
}