{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "$id": "NAMM_POv2015.1.schema.json",
    "type": "object",
    "title": "NAMM PO",
    "description": "This is a json-schema version of NAMM PO v2015.1 from XSD",
    "additionalProperties": {
        "not": {}
    },
    "properties": {
        "NAMM_PO": {
            "type": "object",
            "additionalProperties": {
                "not": {}
            },
            "properties": {
                "version": {
                    "type": "number",
                    "enum": [
                        2015.1
                    ]
                },
                "Id": {
                    "type": "string",
                    "maxLength": 50
                },
                "Timestamp": {
                    "type": "string",
                    "format": "date-time"
                },
                "POHeader": {
                    "type": "object",
                    "additionalProperties": {
                        "not": {}
                    },
                    "properties": {
                        "SoldTo": {
                            "$ref": "CommonSchema.json#/definitions/Party"
                        },
                        "BillTo": {
                            "$ref": "CommonSchema.json#/definitions/Party"
                        },
                        "BuyerOrderId": {
                            "type": "string",
                            "maxLength": 25
                        },
                        "Supplier": {
                            "$ref": "CommonSchema.json#/definitions/Party"
                        },
                        "TermsCode": {
                            "$ref": "CommonSchema.json#/definitions/TermsCode"
                        },
                        "TermsDays": {
                            "type": "integer"
                        },
                        "TermsDate": {
                            "type": "string",
                            "format": "date-time"
                        },
                        "TermsPercent": {
                            "type": "number"
                        },
                        "TermsPercentDays": {
                            "type": "integer"
                        },
                        "ShipInstructions": {
                            "type": "string",
                            "maxLength": 250
                        },
                        "ShipTo": {
                            "$ref": "CommonSchema.json#/definitions/Party"
                        },
                        "TranspCode": {
                            "$ref": "CommonSchema.json#/definitions/TranspCode"
                        },
                        "TranspDesc": {
                            "type": "string",
                            "maxLength": 50
                        },
                        "TranspCarrier": {
                            "type": "string",
                            "maxLength": 15
                        },
                        "TranspTime": {
                            "type": "integer"
                        },
                        "TranspTerms": {
                            "type": "string"
                        },
                        "IncoTermsCode": {
                            "type": "string",
                            "maxLength": 3
                        },
                        "IncoTermsDesc": {
                            "type": "string",
                            "maxLength": 35
                        },
                        "DateOrdered": {
                            "type": "string",
                            "format": "date-time"
                        },
                        "DateBeginShip": {
                            "type": "string",
                            "format": "date-time"
                        },
                        "DateEndShip": {
                            "type": "string",
                            "format": "date-time"
                        },
                        "DateCancel": {
                            "type": "string",
                            "format": "date-time"
                        },
                        "Backorder": {
                            "type": "string",
                            "enum": [
                                "Y",
                                "N"
                            ]
                        },
                        "BuyerName": {
                            "type": "string",
                            "maxLength": 35
                        },
                        "PORevisionNumber": {
                            "type": "integer"
                        },
                        "POStatusIndicator": {
                            "type": "string",
                            "enum": [
                                "N",
                                "U"
                            ]
                        },
                        "ASNRequirement": {
                            "type": "string",
                            "enum": [
                                "Y",
                                "N"
                            ]
                        },
                        "POFileType": {
                            "type": "string",
                            "enum": [
                                "P",
                                "A"
                            ]
                        }
                    },
                    "required": [
                        "SoldTo",
                        "BillTo",
                        "BuyerOrderId",
                        "Supplier",
                        "TermsCode",
                        "TranspCode",
                        "DateOrdered",
                        "Backorder",
                        "PORevisionNumber",
                        "POStatusIndicator",
                        "ASNRequirement",
                        "POFileType"
                    ]
                },
                "PODetail": {
                    "type": "object",
                    "additionalProperties": {
                        "not": {}
                    },
                    "properties": {
                        "Items": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "additionalProperties": {
                                    "not": {}
                                },
                                "properties": {
                                    "POLineNbr": {
                                        "type": "integer",
                                        "minimum": 1
                                    },
                                    "BuyerItemId": {
                                        "type": "string",
                                        "maxLength": 25
                                    },
                                    "BuyerItemDesc": {
                                        "type": "string",
                                        "maxLength": 50
                                    },
                                    "Qty": {
                                        "type": "number"
                                    },
                                    "QtyUOM": {
                                        "type": "string",
                                        "enum": [
                                            "BAG",
                                            "BKT",
                                            "BND",
                                            "BOWL",
                                            "BX",
                                            "CRD",
                                            "CM",
                                            "CS",
                                            "CTN",
                                            "DZ",
                                            "EA",
                                            "FT",
                                            "GAL",
                                            "GROSS",
                                            "IN",
                                            "KIT",
                                            "LOT",
                                            "M",
                                            "MM",
                                            "PC",
                                            "PK",
                                            "PK100",
                                            "PK50",
                                            "PR",
                                            "RACK",
                                            "RL",
                                            "SET",
                                            "SET3",
                                            "SET4",
                                            "SET5",
                                            "SGL",
                                            "SHT",
                                            "SQFT",
                                            "TUBE",
                                            "YD"
                                        ]
                                    },
                                    "UCValue": {
                                        "type": "number"
                                    },
                                    "UCCurrencyCode": {
                                        "type": "string",
                                        "description": "ISO currency code",
                                        "enum": [
                                            "USD",
                                            "EUR",
                                            "JPY"
                                        ]
                                    },
                                    "RetailValue": {
                                        "type": "number"
                                    },
                                    "RetailCurrencyCode": {
                                        "type": "string",
                                        "description": "ISO currency code",
                                        "enum": [
                                            "USD",
                                            "EUR",
                                            "JPY"
                                        ]
                                    },
                                    "ICQtyPerUOM": {
                                        "type": "number"
                                    },
                                    "ICUOM": {
                                        "type": "string",
                                        "maxLength": 5
                                    },
                                    "MCQtyPerUOM": {
                                        "type": "number"
                                    },
                                    "MCUOM": {
                                        "type": "string",
                                        "maxLength": 5
                                    },
                                    "SupplierItemId": {
                                        "type": "string",
                                        "maxLength": 25
                                    },
                                    "BarCodeId": {
                                        "type": "string",
                                        "maxLength": 14
                                    },
                                    "BarCodeType": {
                                        "type": "string",
                                        "enum": [
                                            "GTIN-12",
                                            "GTIN-13",
                                            "GTIN-14",
                                            "PartNumber"
                                        ]
                                    },
                                    "DateBeginShip": {
                                        "type": "string",
                                        "format": "date-time"
                                    },
                                    "DateEndShip": {
                                        "type": "string",
                                        "format": "date-time"
                                    },
                                    "DateCancel": {
                                        "type": "string",
                                        "format": "date-time"
                                    },
                                    "TranspCode": {
                                        "type": "string",
                                        "enum": [
                                            "S001",
                                            "S002",
                                            "S003",
                                            "S004",
                                            "S021",
                                            "S005",
                                            "S006",
                                            "S007",
                                            "S008",
                                            "S022",
                                            "S009",
                                            "S010",
                                            "S023",
                                            "S011",
                                            "S012",
                                            "S013",
                                            "S014",
                                            "S015",
                                            "S016",
                                            "S017",
                                            "S018",
                                            "S020",
                                            "S998",
                                            "S999"
                                        ],
                                        "maxLength": 15
                                    },
                                    "ShipTo": {
                                        "$ref": "CommonSchema.json#/definitions/Party"
                                    }
                                },
                                "required": [
                                    "POLineNbr",
                                    "BuyerItemId",
                                    "Qty",
                                    "QtyUOM",
                                    "UCValue",
                                    "UCCurrencyCode",
                                    "SupplierItemId",
                                    "BarCodeId",
                                    "BarCodeType"
                                ]
                            }
                        }
                    }
                }
            },
            "required": [
                "version",
                "Id",
                "Timestamp",
                "POHeader",
                "PODetail"
            ]
        }
    },
    "required": [
        "NAMM_PO"
    ]
}