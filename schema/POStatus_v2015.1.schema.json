{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "type": "object",
    "properties": {
        "NAMM_POStatus": {
            "type": "object",
            "additionalProperties": {
                "not": {}
            },
            "properties": {
                "version": {
                    "type": "number",
                    "enum": [
                        2015.1
                    ]
                },
                "Id": {
                    "type": "string",
                    "maxLength": 50
                },
                "POStatusRequestId": {
                    "type": "string",
                    "maxLength": 50
                },
                "Timestamp": {
                    "type": "string",
                    "format": "date-time"
                },
                "BuyerOrderId": {
                    "type": "string",
                    "maxLength": 25
                },
                "DateOrdered": {
                    "type": "string",
                    "format": "date-time"
                },
                "BuyerName": {
                    "type": "string"
                },
                "Supplier": {
                    "$ref": "CommonSchema.json#/definitions/Party"
                },
                "SoldTo": {
                    "$ref": "CommonSchema.json#/definitions/Party"
                },
                "StatusCode": {
                    "type": "string"
                },
                "PaymentTerms": {
                    "type": "object",
                    "additionalProperties": {
                        "not": {}
                    },
                    "properties": {
                        "StatusCode": {
                            "type": "string"
                        },
                        "StatusMessage": {
                            "type": "string"
                        },
                        "TermsCode": {
                            "$ref": "CommonSchema.json#/definitions/TermsCode"
                        }
                    },
                    "required": [
                        "StatusCode",
                        "StatusMessage",
                        "TermsCode"
                    ]
                },
                "ShipmentTerms": {
                    "type": "object",
                    "additionalProperties": {
                        "not": {}
                    },
                    "properties": {
                        "StatusCode": {
                            "type": "string"
                        }
                    }
                },
                "ShipTo": {
                    "$ref": "CommonSchema.json#/definitions/Party"
                },
                "Items": {
                    "type": "object",
                    "additionalProperties": {
                        "not": {}
                    },
                    "properties": {
                        "Item": {
                            "type": "array",
                            "minItems": 1,
                            "items": {
                                "type": "object",
                                "additionalProperties": {
                                    "not": {}
                                },
                                "properties": {
                                    "POLineNbr": {
                                        "type": "integer"
                                    },
                                    "SequenceNbr": {
                                        "type": "integer"
                                    },
                                    "StatusCode": {
                                        "type": "string"
                                    },
                                    "StatusMessage": {
                                        "type": "string"
                                    },
                                    "Qty": {
                                        "type": "number"
                                    },
                                    "OriginalOrderQty": {
                                        "type": "number"
                                    },
                                    "QtyUOM": {
                                        "type": "string"
                                    },
                                    "UCValue": {
                                        "type": "number"
                                    },
                                    "OriginalOrderUCValue": {
                                        "type": "number"
                                    },
                                    "UCCurrencyCode": {
                                        "type": "string"
                                    },
                                    "EstimatedShipDate": {
                                        "type": "string"
                                    },
                                    "SupplierOrderId": {
                                        "type": "string"
                                    },
                                    "BuyerItemId": {
                                        "type": "string"
                                    },
                                    "SupplierItemId": {
                                        "type": "string"
                                    },
                                    "BarCodeId": {
                                        "type": "string"
                                    },
                                    "BarCodeType": {
                                        "type": "string"
                                    },
                                    "ShipTo": {
                                        "$ref": "CommonSchema.json#/definitions/Party"
                                    }
                                },
                                "required": [
                                    "POLineNbr",
                                    "SequenceNbr",
                                    "StatusCode",
                                    "StatusMessage",
                                    "Qty",
                                    "OriginalOrderQty",
                                    "QtyUOM",
                                    "UCValue",
                                    "OriginalOrderUCValue",
                                    "UCCurrencyCode",
                                    "SupplierOrderId",
                                    "BuyerItemId",
                                    "SupplierItemId",
                                    "BarCodeId",
                                    "BarCodeType"
                                ]
                            }
                        }
                    }
                }
            },
            "required": [
                "version",
                "Id",
                "POStatusRequestId",
                "Timestamp",
                "BuyerOrderId",
                "DateOrdered",
                "BuyerName",
                "Supplier",
                "SoldTo",
                "StatusCode",
                "PaymentTerms",
                "ShipmentTerms",
                "ShipTo",
                "Items"
            ]
        }
    }
}